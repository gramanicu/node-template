{
  "env": {
    "browser": false,
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard",
    "plugin:markdown/recommended",
    "plugin:yml/standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "overrides": [
      {
        "files": [
          "*.yaml",
          "*.yml"
        ],
        "parser": "yaml-eslint-parser"
      }
    ]
  },
  "plugins": [
    "@typescript-eslint",
    "json-format"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ]
  }
}
